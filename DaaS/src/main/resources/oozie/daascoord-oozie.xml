<coordinator-app name="daas-process" frequency="${coord:days(1)}"
                 start="2014-03-06T20:40Z" end="2014-03-06T21:01Z"
                 timezone="America/Chicago"
                 xmlns="uri:oozie:coordinator:0.2">    
	 <controls>
        	<timeout>0</timeout>
        	<concurrency>1</concurrency>
        	<execution>LAST_ONLY</execution>
      </controls>
    <datasets>
        <dataset name="stld" frequency="${coord:days(1)}"
                 initial-instance="2014-03-06T18:01Z"
                 timezone="America/Chicago">
            <uri-template>
                ${nameNode}${oozie_uri_template}
            </uri-template>
            <done-flag></done-flag>
	    <!--	 <done-flag>trigger.dat</done-flag> -->
        </dataset>
    </datasets>
    <input-events>
        <data-in name="input" dataset="stld">
            <instance>${coord:current(0)}</instance>
        </data-in>
    </input-events>
    <action>
        <workflow>
            <app-path> ${nameNode}${oozie_app_path}</app-path>
            <configuration>
                <property>
                    <name>input</name>
                    <value>${coord:dataIn('input')}</value>
                </property>
            </configuration>
        </workflow>
        
    </action>
</coordinator-app>
